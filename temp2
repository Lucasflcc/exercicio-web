<!DOCTYPE html>
<html> 

<body> 

<style>
body {
  background-image: url('https://www.backgroundsy.com/file/large/light-colorful-background.jpg');
}
</style>

<form action="/action_page.php"> 

  <input type="text" id="texto" required placeholder="digite aqui">
  
  <input id="btAdicionar" type="button" onclick="addfila()" value="Adicionar">
  
  <input id="btRemover" type="button" onclick="removefila()" value="Remover">
  
  <input id="tcor" type="color">

  <p id="array"></p>

  <script>
  
  const tfila = [];
  const t = document.getElementById("texto");
  const c = document.getElementById("tcor");
  
  function addfila() {
    if(t.value !== ""){
      tfila.push(t.value);
      document.getElementById("array").innerHTML = tfila;
      t.value = "";
      }
  }
  
  function removefila() {
      tfila.shift();
      document.getElementById("array").innerHTML = tfila;
  }

  </script>

</form> 

</body> 

</html> 
